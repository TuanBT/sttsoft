<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- Title and other stuffs -->
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">

    <!-- Stylesheets -->
    <link href="@Url.Content("~/Content/style/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style/font-awesome.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style/style.css")" rel="stylesheet" type="text/css" />

    <!-- HTML5 Support for IE -->
    <!--[if lt IE 9]>
  <script src="js/html5shim.js"></script>
  <![endif]-->

    <!-- Favicon -->
    <link rel="shortcut icon" href="/Content/img/favicon/favicon.png">
</head>

<body>

    <div class="admin-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Widget starts -->
                    <div class="widget wred">
                        <div class="widget-head">
                            <i class="icon-lock"></i>Register 
                        </div>
                        <div class="widget-content">
                            <div class="padd">

                                <form action="/Account/Register" method="POST" class="form-horizontal">
                                    <!-- Registration form starts -->
                                    <span class="red">@ViewBag.Status</span>
                                    <!-- Username -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="username">Username</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="username" class="form-control" id="username">
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="email">Password</label>
                                        <div class="col-lg-9">
                                            <input type="password" name="password" class="form-control" id="password">
                                        </div>
                                    </div>
                                    <!-- Role -->
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Role</label>
                                        <div class="col-lg-8">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optionsDl" id="optionsRadios1" value="D">
                                                    Đại lý
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optionsDl" id="optionsRadios2" value="U" checked="checked">
                                                    Người dùng
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Name -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="name">Name</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="name" class="form-control" id="name">
                                        </div>
                                    </div>
                                    <!-- Email -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="email">Email</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="sendEmail" class="form-control" id="email">
                                        </div>
                                    </div>
                                     <!-- Email -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="email">Phone</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="phone" class="form-control" id="phone">
                                        </div>
                                    </div>
                                    <!-- Accept box and button s-->
                                    <div class="form-group">
                                        <div class="col-lg-9 col-lg-offset-3">
                                            <br />
                                            <button type="submit" name="Create" value="Tạo mới" class="btn btn-danger">Register</button>
                                            <button type="reset" class="btn btn-success">Reset</button>
                                        </div>
                                    </div>
                                    <br />
                                </form>

                            </div>
                        </div>
                        <div class="widget-foot">
                            <p>Already Registred? <a href="@Url.Action("Login", "Account")">Login</a></p>
                            <p><a href="@Url.Action("Index", "Home")">Trang chủ</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- JS -->
    <script src="@Url.Content("~/Content/js/jquery.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.js")"></script>
</body>

